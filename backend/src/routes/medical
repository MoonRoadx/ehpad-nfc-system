const express = require('express');
const router = express.Router();
const db = require('../database/db');
const auth = require('../middleware/auth');
const logger = require('../utils/logger');

// GET - Dossier médical d'un résident
router.get('/resident/:residentId', auth, async (req, res) => {
  try {
    const { residentId } = req.params;
    
    const result = await db.query(`
      SELECT * FROM medical_records 
      WHERE resident_id = $1 
      ORDER BY created_at DESC
    `, [residentId]);
    
    res.json({ success: true, data: result.rows });
  } catch (error) {
    logger.error('Erreur lors de la récupération du dossier médical:', error);
    res.status(500).json({ success: false, error: error.message });
  }
});

// POST - Ajouter un médicament
router.post('/medication', auth, async (req, res) => {
  try {
    const { residentId, medication, dosage, frequency, prescribedBy, notes } = req.body;
    
    const result = await db.query(`
      INSERT INTO medical_records 
      (resident_id, medication, dosage, frequency, prescribed_by, notes, added_by)
      VALUES ($1, $2, $3, $4, $5, $6, $7)
      RETURNING *
    `, [residentId, medication, dosage, frequency, prescribedBy, notes, req.user.id]);
    
    logger.info(`Médicament ajouté pour le résident ${residentId}: ${medication}`);
    res.status(201).json({ success: true, data: result.rows[0] });
  } catch (error) {
    logger.error('Erreur lors de l\'ajout du médicament:', error);
    res.status(500).json({ success: false, error: error.message });
  }
});

// PUT - Mettre à jour un médicament
router.put('/medication/:id', auth, async (req, res) => {
  try {
    const { id } = req.params;
    const { medication, dosage, frequency, notes } = req.body;
    
    const result = await db.query(`
      UPDATE medical_records SET
        medication = $1, dosage = $2, frequency = $3, 
        notes = $4, updated_at = NOW()
      WHERE id = $5
      RETURNING *
    `, [medication, dosage, frequency, notes, id]);
    
    if (result.rows.length === 0) {
      return res.status(404).json({ success: false, error: 'Enregistrement non trouvé' });
    }
    
    res.json({ success: true, data: result.rows[0] });
  } catch (error) {
    logger.error('Erreur lors de la mise à jour du médicament:', error);
    res.status(500).json({ success: false, error: error.message });
  }
});

// DELETE - Supprimer un médicament
router.delete('/medication/:id', auth, async (req, res) => {
  try {
    const { id } = req.params;
    
    const result = await db.query(
      'DELETE FROM medical_records WHERE id = $1 RETURNING *',
      [id]
    );
    
    if (result.rows.length === 0) {
      return res.status(404).json({ success: false, error: 'Enregistrement non trouvé' });
    }
    
    res.json({ success: true, message: 'Médicament supprimé' });
  } catch (error) {
    logger.error('Erreur lors de la suppression du médicament:', error);
    res.status(500).json({ success: false, error: error.message });
  }
});

module.exports = router;
